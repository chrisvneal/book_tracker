<%- include('partials/header') %>

    <div class="container">
        <header>
            <h1>Book Review Tracker</h1>
        </header>
        <% if (locals.bookData) { %>

            <div class="review-edit-form">
                <h2>Edit Review for <%= bookData.title %>
                </h2>

                <p>Author: <%= bookData.author %>
                </p>
                <p>ISBN: <%= bookData.isbn %>
                </p>
                <p>Published Year: <%= bookData.published_date %>
                </p>
                <form action="/update-review" method="post">
                    <input type="hidden" name="book_id" value="<%= bookData.book_id %>">
                    <!-- <label for="review">Review:</label><br> -->
                    <textarea id="review" name="review" rows="4" cols="50"><%= bookData.review %></textarea><br><br>

                    <button type="submit">Update Review</button>
                </form>
            </div>

            <%} %>
    </div>

    </body>

    </html>